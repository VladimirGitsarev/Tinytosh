{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TinytoshPC",
  "version": "1.0.0",
  "identifier": "com.tinytosh.pc",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
    {
      "title": "Tinytosh PC",
      "width": 340,
      "height": 560,
      "resizable": true,
      "fullscreen": false,
      "visible": false,
      "transparent": false
    }
  ],
  "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
